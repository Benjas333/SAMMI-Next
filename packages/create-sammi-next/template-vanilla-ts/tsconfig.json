{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],

        "module": "preserve",
        "moduleDetection": "force",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,

        "outDir": "./dist",
        "rootDir": ".",
        "sourceMap": true,

        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        // "noEmit": true,
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["src/**/*"]
}
