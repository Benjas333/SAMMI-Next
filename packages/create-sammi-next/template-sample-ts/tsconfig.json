{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],

        "module": "esnext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,

        "outDir": "./dist",
        // "rootDir": "./src",
        "sourceMap": true,

        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        // "noEmit": true,
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["src/**/*", "build.ts"]
}
