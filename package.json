{
    "name": "sammi-next-monorepo",
    "private": true,
    "type": "module",
    "workspaces": ["packages/*"],
    "scripts": {
        "install:submodules": "git submodule update --init --recursive",

        "gen:types:websocket": "bun run --filter sammi-websocket-types build",
        "gen:types": "bun run gen:types:websocket && bun run --filter sammi-bridge-types build",

        "build:types": "bun run gen:types",
        "build:next": "bun run --filter sammi-next build",
        "build:create-next": "bun run --filter create-sammi-next build",
        "build": "bun run build:types && bun run build:next && bun run build:create-next",

        "format": "bun x prettier --write .",

        "changeset": "bun x changeset",
        "version-packages": "bun x changeset version",
        "release": "bun run build && changeset publish",

        "publish:dry": "bun run build && bun publish --dry-run --workspaces --if-present",
        "publish:types": "bun publish --workspace packages/sammi-bridge-types",
        "publish:eslint": "bun publish --workspace packages/eslint-plugin",
        "publish:sammi-next": "bun publish --workspace packages/sammi-next",
        "publish:create": "bun publish --workspace packages/create-sammi-next",
        "publish:all": "bun run publish:types && bun run publish:eslint && bun run publish:sammi-next && bun run publish:create"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.8",
        "@eslint/js": "^9.39.2",
        "@types/bun": "latest",
        "@types/node": "^25.0.9",
        "eslint": "^9.39.2",
        "typescript-eslint": "^8.53.0"
    },
    "peerDependencies": {
        "typescript": "^5"
    }
}
